<h1 class = "header">New Category</h1>

<%= form_with model: @category do |form| %>

  
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
<br>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
<br>
  <%= form.submit "Create Category" %>
<% end %>
